{
  "name": "rePlay - Flutter Toy Collection App",
  "image": "ghcr.io/cirruslabs/flutter:latest",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/claude-code:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "nash.awesome-flutter-snippets",
        "jeroen-meijer.pubspec-assist",
        "alexisvt.flutter-snippets"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "dart.flutterSdkPath": "/opt/flutter",
        "[dart]": {
          "editor.defaultFormatter": "Dart-Code.dart-code",
          "editor.selectionHighlight": false,
          "editor.suggestSelection": "first",
          "editor.tabCompletion": "onlySnippets",
          "editor.wordBasedSuggestions": "off"
        }
      }
    }
  },

  "postCreateCommand": "flutter pub get || true",

  "remoteUser": "root",

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly,type=bind,consistency=cached"
  ]
}
